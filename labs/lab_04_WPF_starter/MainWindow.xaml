<Window x:Class="lab_04_WPF_starter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_04_WPF_starter"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto" FontSize="25">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="Button01" Background="#edd895" Grid.Row="0" Grid.Column="1" Content="Click Here" Click="Button01_Click"/>
        <ListBox x:Name="ListBox01" Background="#f2e5bc" Grid.Row="1" Grid.Column="3" Grid.RowSpan="3"/>
        <TextBox x:Name="TextBox01" Grid.Row="1" Grid.Column="0" Background="#ccc4ad"/>
        <ComboBox x:Name="ComboBox01" Grid.Row="2" Grid.Column="0" Background="#f4eacd" SelectionChanged="ComboBox01_SelectionChanged" />
    </Grid>
</Window>
